<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.js" crossorigin="anonymous"></script>
    <script src="/scripts/home.js"></script>
    <link rel="stylesheet" href="/home.css">
    <title>Document</title>
</head>

<body>
    <%- include ('./partials/navbar') %>
    <div class="wrapper">
        <div class="questions">
            <% questions.forEach(function(question){ %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            by:- <%= question.userId.name %>
                        </h5>
                        <p class="card-text">
                            <%= question.questionBody %>
                        </p>
                        <button id="answerButton" class="btn btn-danger">Answer</button>
                        <!-- answering  -->
                        <div class="answer visually-hidden text-center" id="answer">
                            <form action="/query/answer" method="POST">
                                <div class="mb-3">
                                    <textarea name="ansBody" class="body"></textarea>
                                </div>
                                <input type="text" name="postId" value="<%= question.id %>" class="visually-hidden">
                                <div class="mb-3">
                                    <button id="post" class="btn btn-danger" type="submit">Post</button>
                                </div>
                            </form>
                        </div>
                        <h6></h6>
                        <!-- all answers -->
                        <% (question.answers).forEach(function(answer){ %>
                            <p><%= answer.answerBody %></p>
                            <% }); %>

                    </div>
                </div>
            <% }); %>

        </div>
    </div>
    <%- include ('./partials/footer') %>
</body>

</html>